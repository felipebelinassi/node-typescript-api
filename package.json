{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "NodeJS TypeScript API",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "prestart": "yarn build",
    "start": "node dist/src/index.js",
    "start:dev": "ts-node-dev --transpile-only src/index.ts | pino-pretty -c",
    "test": "yarn test:unit && yarn test:functional",
    "test:functional": "jest --projects ./test --runInBand",
    "test:unit": "jest",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "config": "^3.3.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.10",
    "pino": "^6.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.36",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.14",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.11.8",
    "@types/pino": "^6.3.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "jest": "^26.5.3",
    "nock": "^13.0.4",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipebelinassi/node-typescript-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Felipe Belinassi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/felipebelinassi/node-typescript-api/issues"
  },
  "homepage": "https://github.com/felipebelinassi/node-typescript-api#readme"
}
